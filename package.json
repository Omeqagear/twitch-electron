{
  "name": "twitch-electron",
  "version": "0.0.8",
  "description": "",
  "build": {
    "appId": "twitch.electron"
  },
  "ava": {
    "babel": "inherit",
    "files": [
      "src/**/*-spec.js",
      "src/**/**/*-spec.js"
    ],
    "require": [
      "./setup.js"
    ]
  },
  "scripts": {
    "postinstall": "cd app && npm install",
    "start": "ENV=development electron ./app",
    "build": "webpack",
    "release_ml": "webpack -p --define process.env.NODE_ENV='\"production\"' && build -ml --x64 --publish onTag /app",
    "release_w": "webpack -p --define process.env.NODE_ENV='\"production\"' && build -w --publish onTag --x64 /app",
    "release": "npm version patch && cd app && npm version patch --no-git-tag-version",
    "dev": "ENV=development concurrently -k 'webpack -w --colors' 'npm start'",
    "lint": "eslint .",
    "test": "NODE_ENV=AVA ava --verbose",
    "watch:test": "npm run test -- --watch",
    "storybook": "ENV=development start-storybook -p 6006 -s ./dist/",
    "build-storybook": "build-storybook"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@kadira/storybook": "^2.5.2",
    "appdmg": "^0.4.5",
    "ava": "^0.16.0",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.14.0",
    "concurrently": "^2.2.0",
    "css-loader": "^0.24.0",
    "css-modules-require-hook": "^4.0.2",
    "electron-builder": "^6.6.1",
    "electron-packager": "^7.7.0",
    "electron-prebuilt": "^1.3.4",
    "enzyme": "^2.4.1",
    "eslint": "^3.3.1",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-react": "^6.1.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.22.0",
    "json-loader": "^0.5.4",
    "node-sass": "^3.8.0",
    "react-addons-test-utils": "^15.3.1",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2"
  }
}
